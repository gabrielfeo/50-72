{
  "name": "50-72",
  "description": "Re-formats your MR descriptions to abide by the 50/72 rule",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "context-menu-setup.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.gitlab.com/",
        "https://code.ifoodcorp.com.br/"
      ],
      "js": ["description-formatter.js"]
    }
  ],
  "host_permissions": [
    "https://*.gitlab.com/",
    "https://code.ifoodcorp.com.br/"
  ]
}