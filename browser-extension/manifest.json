{
  "name": "50-72",
  "description": "Re-formats your MR descriptions to abide by the 50/72 rule",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*"
      ],
      "js": [
        "description-formatter.js"
      ]
    }
  ]
}